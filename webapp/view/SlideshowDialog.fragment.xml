<core:FragmentDefinition
   xmlns="sap.m"
	xmlns:l="sap.ui.layout"
   xmlns:core="sap.ui.core" >
    <Dialog >
        <customHeader>
            <Bar>
                <contentMiddle>
                    <Title text="Slideshow"/>
                </contentMiddle>
                <contentRight>
                    <Button icon="sap-icon://less" type="Transparent" press="onMinimizePress" />
                    <Button icon="sap-icon://decline" type="Transparent" press="onStopPress" />
                </contentRight>
            </Bar>
        </customHeader>
        <content>
            <Toolbar>
                <Button icon="sap-icon://navigation-left-arrow" type="Transparent" press="onLeftPress" />
                <ToolbarSpacer/>
                <Button text="Screen 1" press=".onImagePress($event, 0)"/>
                <Button visivle="{= ${viewModel>/imageMax} > 1 }" text="Screen 2" press=".onImagePress($event, 1)"/>
                <ToolbarSpacer/>
                <Button icon="sap-icon://navigation-right-arrow" type="Transparent" press="onRightPress" />
            </Toolbar>
            <FlexBox
				alignItems="Center"
				justifyContent="Center">
                <Image ariaDetails="detailsActiveImage" src="{viewModel>/image}"
					decorative="false"
                    width="750px"
					press="onImagePress"/>
            </FlexBox>
        </content>
    </Dialog>
</core:FragmentDefinition>